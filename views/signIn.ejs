<link rel="stylesheet" href="/css/signIn.css">


<div class="signIn-container mx-auto mt-8 p-4">
    <h2 class="signIn-heading text-2xl font-semibold mb-4">Sign In</h2>
    <form action="/create-session" method="post" class="signIn-form max-w-md mx-auto">
        <div class="mb-4">
            <label for="email" class="signIn-label block text-gray-700 text-sm font-bold mb-2">Username or Email</label>
            <input type="email" id="email" name="email"
                class="signIn-input border p-2 w-full focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-4">
            <label for="password" class="signIn-label block text-gray-700 text-sm font-bold mb-2">Password</label>
            <input type="password" id="password" name="password"
                class="signIn-input border p-2 w-full focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-6">
            <button type="submit"
                class="signIn-button bg-blue-500 text-white p-2 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800 w-full">
                Sign In
            </button>
        </div>

        <p class="signIn-text-center text-sm text-gray-700">Don't have an account? <a href="/sign-up"
                class="signIn-text-blue hover:underline">Sign up here.</a></p>
    </form>
</div>