<link rel="stylesheet" href="/css/signUp.css">

<!-- Sign Up Form -->
<div class="signUp mx-auto mt-8 p-4">
    <h2 class="signUp-heading text-2xl font-semibold mb-4">Sign Up</h2>
    <form action="/create" method="post" class="signUp-form max-w-md mx-auto">
        <div class="mb-4">
            <label for="name" class="signUp-label block text-gray-700 text-sm font-bold mb-2">Name</label>
            <input type="text" id="name" name="name"
                class="signUp-input border p-2 w-full focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-4">
            <label for="email" class="signUp-label block text-gray-700 text-sm font-bold mb-2">Email</label>
            <input type="email" id="email" name="email"
                class="signUp-input border p-2 w-full focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-4">
            <label for="password" class="signUp-label block text-gray-700 text-sm font-bold mb-2">Password</label>
            <input type="password" id="password" name="password"
                class="signUp-input border p-2 w-full focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-4">
            <label for="confirmPassword" class="signUp-label block text-gray-700 text-sm font-bold mb-2">Confirm
                Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword"
                class="signUp-input border p-2 w-full focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-6">
            <button type="submit"
                class="signUp-button bg-green-500 text-white p-2 rounded-full hover:bg-green-700 focus:outline-none focus:shadow-outline-green active:bg-green-800 w-full">
                Sign Up
            </button>
        </div>

        <p class="signUp-text-center text-sm text-gray-700">Already have an account? <a href="/sign-in"
                class="signUp-text-blue hover:underline">Sign in here.</a></p>
    </form>
</div>