<link rel="stylesheet" href="/css/Question.css">

<div class="bg-gray-100">

    <div class="container mx-auto p-8">
        <h1 class="text-2xl font-bold mb-8">
            <%= question.title %>
        </h1>

        <div class="bg-white p-6 rounded-md shadow-md">
            <p class="text-gray-700 mb-4">
                <%= question.questionText %>
            </p>
            <div class="mb-4">
                <strong class="text-gray-800">Answer:</strong>
                <p>
                    <%= question.answer %>
                </p>
            </div>
            <p class="text-gray-800"><strong>Subject:</strong>
                <%= question.subject %>
            </p>
            <p class="text-gray-800"><strong>Topic:</strong>
                <%= question.topic %>
            </p>
            <p class="text-gray-800"><strong>Submit Time:</strong>
                <%= question.submitTime %>
            </p>
        </div>

        <a href="/" class="block mt-8 text-blue-500 hover:underline">&larr; Back to All Questions</a>
    </div>

</div>